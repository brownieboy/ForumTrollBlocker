{
  "name": "Forum Troll blocker",
  "version": "0.1",
  	"manifest_version": 2,
  "description": "Blocks user-defined trolls from forums such as ZdNet.",
    "background": {
    "persistent": false,
    "scripts": ["javascript\libs\jquery-2.0.3.min.js"]
  },
  "permissions": ["http://*.zdnet.com/", "https://*.zdnet.com/"],
  "browser_action": {
    "default_title": "",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}