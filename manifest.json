{
	"name": "Forum Troll blocker",
	"version": "0.1",
	"manifest_version": 2,
	"description": "Blocks user-defined trolls from forums such as ZdNet.",
	"content_scripts": [
		{
			"matches": ["http://www.zdnet.com/*"],
			"js": ["javascript/libs/jquery-2.0.3.min.js", 
			  "javascript/libs/waitForKeyElements.js", "javascript/app.js"]
		}
	],
	"permissions": ["http://*.zdnet.com/", "https://*.zdnet.com/"],
	"browser_action": {
		"default_title": "",
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	}
}
