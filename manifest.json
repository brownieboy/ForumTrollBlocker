{
	"name": "Forum Troll Stomp",
	"version": "0.1",
	"manifest_version": 2,
	"description": "Stomp on your (un)favourite trolls from the ZDNet forums.  Block them so you never see them again.",
	"content_scripts": [
		{
			"matches": ["http://www.zdnet.com/*"],
			"js": ["javascript/libs/jquery-2.0.3.min.js", "javascript/libs/waitForKeyElements.js", "javascript/app.js"]
		}
	],
	"background": {
		"scripts": ["javascript/background.js"]
	},
	"permissions": ["storage", "http://*.zdnet.com/", "https://*.zdnet.com/"],
	"browser_action": {
		"default_title": "Forum Troll Stomper",
		"default_icon": {
			"19": "images/foot19.png",
			"38": "images/foot38.png"
		},
		"default_popup": "popup.html"
	},
	"web_accessible_resources": ["images/foot19.png"]
}
